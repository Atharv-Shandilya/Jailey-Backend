generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URI")
}

enum Roles {
  ADMIN
  WORKER
  MANAGER
}

enum Status {
  INACTIVE
  ACTIVE
}

enum Type {
  CREDIT
  DEBIT
}

model User {
  id String @id @default(uuid())
  fullname  String 
  phone_number     String @unique
  createdAt DateTime @default(now())

  Customer Customer?
  Employee Employee?
}

model Customer {
  id String @id @default(uuid())
  address String @default("")
  balance Int @default(0)
  subsrate Int @default(0)
  subs_status Status @default(INACTIVE)
  last_active DateTime @default(now())
  transactions Transaction[] @relation("transactionRelation")

  user_id String @unique
  User User  @relation(fields: [user_id], references: [id])
}

model Employee {
  id String @id @default(uuid())
  role Roles @default(WORKER)
  pin Int
  createdAt DateTime @default(now())
  user_id String @unique
  User User @relation(fields: [user_id], references: [id])
}

model Transaction {
  id String @id @default(uuid())
  amount Int
  description String 
  customer_id String
  type Type @default(CREDIT)
  client Customer  @relation("transactionRelation",fields: [customer_id], references:[id])
  createdAt DateTime @default(now())
}