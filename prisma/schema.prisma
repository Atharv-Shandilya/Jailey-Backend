generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  username  String @id
  email     String @unique
  createdAt DateTime @default(now())

  friendshipInitiated User_Freinds[] @relation("initiatorRelation")
  friendshipRecieved User_Freinds[] @relation("recieverRelation")

}

model User_Freinds {
  
  initiatorUsername String 
  initiator User @relation("initiatorRelation",fields: [initiatorUsername], references: [username])

  recieverUsername String 
  reciever User @relation("recieverRelation", fields: [recieverUsername], references: [username])

  createdAt DateTime

  @@id([initiatorUsername, recieverUsername])
}